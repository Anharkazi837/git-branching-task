					"source": {
						"type": "AzureSqlSource",
						"sqlReaderQuery": {
							"value": "select * from [dbo].[Bharath_SensorData] \nwhere \n\tLast_Updated > '@{activity('LookupOldWaterMarkActivity').output.firstRow.WatermarkValue}' \n\tand \nLast_Updated <= '@{activity('LookupNewWaterMarkActivity').output.firstRow.NewWatermarkvalue}'",
