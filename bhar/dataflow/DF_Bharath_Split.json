{
	"name": "DF_Bharath_Split",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DS_Gen2_Bharath_Product1",
						"type": "DatasetReference"
					},
					"name": "LoadingProductsData"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "DS_Gen2_Bharath_Sink",
						"type": "DatasetReference"
					},
					"name": "Stream1Output"
				},
				{
					"dataset": {
						"referenceName": "DS_Gen2_Bharath_Sink2",
						"type": "DatasetReference"
					},
					"name": "Stream2Output"
				}
			],
			"transformations": [
				{
					"name": "SplitBasedonPriceRanges"
				},
				{
					"name": "RemovingQuotes"
				},
				{
					"name": "filteringNullvalues"
				}
			],
			"scriptLines": [
				"source(output(",
				"          product_id as string,",
				"          product_name as string,",
				"          category as string,",
				"          price as string,",
				"          quantity as string,",
				"          store_location as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> LoadingProductsData",
				"filteringNullvalues split(toInteger(price)>1000,",
				"     disjoint: false) ~> SplitBasedonPriceRanges@(Stream1, Stream2)",
				"LoadingProductsData derive(product_name = replace(product_name,'\"','')) ~> RemovingQuotes",
				"RemovingQuotes filter(!isNull(product_id) &&\r",
				"!isNull(product_name) &&\r",
				"!isNull(category) &&\r",
				"!isNull(price) &&\r",
				"!isNull(quantity) &&\r",
				"!isNull(store_location)) ~> filteringNullvalues",
				"SplitBasedonPriceRanges@Stream1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> Stream1Output",
				"SplitBasedonPriceRanges@Stream2 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          product_id as string,",
				"          product_name as string,",
				"          category as string,",
				"          price as string,",
				"          quantity as string,",
				"          store_location as string",
				"     ),",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> Stream2Output"
			]
		}
	}
}