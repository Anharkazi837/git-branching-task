		},
		{
			"name": "[concat(parameters('factoryName'), '/ls_sujay_gen2_movies')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureBlobFS",
				"typeProperties": {
					"url": "[parameters('ls_sujay_gen2_movies_properties_typeProperties_url')]",
					"accountKey": {
						"type": "SecureString",
						"value": "[parameters('ls_sujay_gen2_movies_accountKey')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/df_movies_sujay')]",
			"type": "Microsoft.DataFactory/factories/dataflows",
			"apiVersion": "2018-06-01",
			"properties": {
				"type": "MappingDataFlow",
				"typeProperties": {
					"sources": [
						{
							"dataset": {
								"referenceName": "ds_sujay_movies_source",
								"type": "DatasetReference"
							},
							"name": "MoviesSource"
						}
					],
					"sinks": [
						{
							"dataset": {
								"referenceName": "ds_sujay_comedyrating_avg",
								"type": "DatasetReference"
							},
							"name": "ComedyMoviesRatingByYear"
						}
					],
					"transformations": [
						{
							"name": "FilterByComedy"
						},
						{
							"name": "AverageRating"
						}
					],
					"scriptLines": [
						"source(output(",
						"          movie as string,",
						"          title as string,",
						"          genres as string,",
						"          year as string,",
						"          Rating as string,",
						"          {Rotton Tomato} as string",
						"     ),",
						"     allowSchemaDrift: true,",
						"     validateSchema: false,",
						"     ignoreNoFilesFound: false) ~> MoviesSource",
						"MoviesSource filter(rlike(genres,'Comedy') &&\r",
						"toInteger(year)>=1910 && \r",
						"toInteger(year)<=2000) ~> FilterByComedy",
						"FilterByComedy aggregate(groupBy(year),",
						"     Rating = round(avg(toInteger(Rating)),1)) ~> AverageRating",
						"AverageRating sink(allowSchemaDrift: true,",
						"     validateSchema: false,",
						"     umask: 0022,",
						"     preCommands: [],",
						"     postCommands: [],",
						"     skipDuplicateMapInputs: true,",
						"     skipDuplicateMapOutputs: true) ~> ComedyMoviesRatingByYear"
					]
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/ds_sujay_movies_source')]",
				"[concat(variables('factoryId'), '/datasets/ds_sujay_comedyrating_avg')]"
			]
		}
	]
}