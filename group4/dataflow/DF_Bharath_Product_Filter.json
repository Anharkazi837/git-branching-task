{
	"name": "DF_Bharath_Product_Filter",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DS_Gen2_Bharath_products_source",
						"type": "DatasetReference"
					},
					"name": "LoadingProductsdata"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "DS_Gen2_Bharath_Sink",
						"type": "DatasetReference"
					},
					"name": "FilteredData"
				}
			],
			"transformations": [
				{
					"name": "FilteringProductData"
				},
				{
					"name": "RemovingQuotes"
				},
				{
					"name": "filteringNullvalues"
				}
			],
			"scriptLines": [
				"source(output(",
				"          product_id as string,",
				"          product_name as string,",
				"          category as string,",
				"          price as string,",
				"          quantity as string,",
				"          store_location as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> LoadingProductsdata",
				"filteringNullvalues filter(toInteger(price)>1000 && toInteger(quantity)>0 && category=='Smartphone') ~> FilteringProductData",
				"LoadingProductsdata derive(product_name = replace(product_name, '\"', '')) ~> RemovingQuotes",
				"RemovingQuotes filter(!isNull(product_id) &&",
				"!isNull(product_name) &&",
				"!isNull(category) &&",
				"!isNull(price) &&",
				"!isNull(quantity) &&",
				"!isNull(store_location)) ~> filteringNullvalues",
				"FilteringProductData sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> FilteredData"
			]
		}
	}
}