{
	"name": "DF_Bharath_Select",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DS_Gen2_Bharath_products_source",
						"type": "DatasetReference"
					},
					"name": "LoadingProductData"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "DS_Gen2_Bharath_Sink",
						"type": "DatasetReference"
					},
					"name": "SelectedColumnsData"
				}
			],
			"transformations": [
				{
					"name": "selectingRequiredColumns"
				},
				{
					"name": "RemovingQuotes"
				},
				{
					"name": "filterinfNullvalues"
				}
			],
			"scriptLines": [
				"source(output(",
				"          product_id as string,",
				"          product_name as string,",
				"          category as string,",
				"          price as string,",
				"          quantity as string,",
				"          store_location as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> LoadingProductData",
				"filterinfNullvalues select(mapColumn(",
				"          product_name,",
				"          category,",
				"          price",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> selectingRequiredColumns",
				"LoadingProductData derive(product_name = replace(product_name,'\"','')\r",
				"\r",
				"\r",
				") ~> RemovingQuotes",
				"RemovingQuotes filter(!isNull(product_id) &&\r",
				"!isNull(product_name) &&\r",
				"!isNull(category) &&\r",
				"!isNull(price) &&\r",
				"!isNull(quantity) &&\r",
				"!isNull(store_location)) ~> filterinfNullvalues",
				"selectingRequiredColumns sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> SelectedColumnsData"
			]
		}
	}
}