{
	"name": "dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DS_gen2_product_input",
						"type": "DatasetReference"
					},
					"name": "productInput"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "DS_onkar_derieved_column",
						"type": "DatasetReference"
					},
					"name": "SinkForDErivedColumn"
				}
			],
			"transformations": [
				{
					"name": "RemoveNull"
				},
				{
					"name": "removequotes"
				},
				{
					"name": "TotalValue"
				}
			],
			"scriptLines": [
				"source(output(",
				"          product_id as string,",
				"          product_name as string,",
				"          category as string,",
				"          price as string,",
				"          quantity as string,",
				"          store_location as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> productInput",
				"productInput filter(!isNull(product_id) &&",
				"!isNull(product_name) &&",
				"!isNull(category) &&",
				"!isNull(price) &&",
				"!isNull(quantity) &&",
				"!isNull(store_location)) ~> RemoveNull",
				"RemoveNull derive(product_name = replace(product_name, '\"', '')) ~> removequotes",
				"removequotes derive(Total_Value = round(toDouble(price)*toInteger(quantity),2)) ~> TotalValue",
				"TotalValue sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> SinkForDErivedColumn"
			]
		}
	}
}