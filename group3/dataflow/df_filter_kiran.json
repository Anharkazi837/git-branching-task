{
	"name": "df_filter_kiran",
	"properties": {
		"folder": {
			"name": "Kiran_group3_tasks"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_kiran_4",
						"type": "DatasetReference"
					},
					"name": "source"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ds_kiran_sink_1",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "derivedColumn"
				},
				{
					"name": "filter"
				},
				{
					"name": "filterforpricecatquantity"
				}
			],
			"scriptLines": [
				"source(output(",
				"          product_id as string,",
				"          product_name as string,",
				"          category as string,",
				"          price as string,",
				"          quantity as string,",
				"          store_location as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source",
				"source derive(productname = replace(product_name,'\"','')) ~> derivedColumn",
				"derivedColumn filter(!isNull(product_id) &&\r",
				"!isNull(product_name) &&\r",
				"!isNull(category) &&\r",
				"!isNull(price) &&\r",
				"!isNull(quantity) &&\r",
				"!isNull(store_location)) ~> filter",
				"filter filter(toInteger(price)>1000 && rlike(category, 'Smartphone') && toInteger(quantity)>0) ~> filterforpricecatquantity",
				"filterforpricecatquantity sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          category as string,",
				"          total_quantity as string",
				"     ),",
				"     partitionFileNames:['filtertransformations_output.csv'],",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     partitionBy('hash', 1)) ~> sink1"
			]
		}
	}
}